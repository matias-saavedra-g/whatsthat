{
    "manifest_version": 3,
    "name": "WhatsThat",
    "version": "1.1",
    "description": "Extensi√≥n que difumina todos los mensajes de los chats de WhatsApp Web y permite copiar mensajes con un solo click.",
    "author": "matias-saavedra-g",
    "permissions": [
      "tabs",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["js/blurMessages.js"]
      },
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["js/blurContacts.js"]
      },
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["js/unblurAll.js"]
      },
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["js/mainSwitch.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["js/easyCopyMessages.js"],
        "run_at": "document_end"
      }
    ]
}